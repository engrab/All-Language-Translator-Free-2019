<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/rect_text_edit_white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="english"
                android:textColor="#777777"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/chat_fromSpeak"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/chat_fromCopy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_content_copy_black_24dp"
                android:tint="@android:color/black"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/chat_fromShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:tint="@android:color/black"
                android:src="@drawable/ic_share_black_24dp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/chat_fromText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_text_edit"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_to"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="english"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/chat_toSpeak"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:tint="@android:color/white"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/chat_toCopy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_content_copy_black_24dp"
                android:tint="@android:color/white"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/chat_toShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_share_black_24dp"
                android:tint="@android:color/white"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/chat_toText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
