<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_toolbar"
    app:theme="@style/card_toolbar_overlay_theme">

    <LinearLayout style="@style/card_toolbar_inner_layout">


        <Spinner
            android:id="@+id/toSpin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:background="@mipmap/white_spinner_normal"
            android:textColor="#000"/>
        <View
            android:id="@+id/menu_separator"
            style="@style/card_vertical_separator" />

        <ImageView
            android:id="@+id/toSpeak"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:visibility="visible"/>
        <View
            android:id="@+id/menu_separator1"
            style="@style/card_vertical_separator" />

        <ImageView
            android:id="@+id/toCopy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:tint="@android:color/black"
            android:src="@drawable/ic_content_copy_black_24dp"
            android:visibility="visible"/>
        <View
            android:id="@+id/menu_separator2"
            style="@style/card_vertical_separator" />

        <ImageView
            android:id="@+id/toShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:tint="@android:color/black"
            android:src="@drawable/ic_share_black_24dp"
            android:visibility="visible"/>


    </LinearLayout>

</androidx.appcompat.widget.Toolbar>